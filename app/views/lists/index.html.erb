<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80)">
  <div class="container">
    <h1>La liste de mes listes 😍</h1>
    <%= link_to 'Add new list', new_list_path, :class => "btn btn-flat" %>
  </div>
</div>

<div class="container cards-container">
  <% @lists.each do |list| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= link_to list.name, list_path(list.id) %></h2>
      </div>
    </div>
  <% end %>
</div>
